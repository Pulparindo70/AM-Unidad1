import { motion } from 'framer-motion'
import { Swiper, SwiperSlide } from 'swiper/react'
import { Autoplay } from 'swiper/modules'
import 'swiper/css'
import { Doughnut } from 'react-chartjs-2'
import {
  Chart as ChartJS,
  ArcElement,
  Tooltip,
  Legend
} from 'chart.js'
ChartJS.register(ArcElement, Tooltip, Legend)

const tecnologias = [
  'JavaScript', 'Python', 'HTML', 'CSS', 'React', 'Tailwind', 'Firebase'
]

const testimonios = [
  {
    nombre: 'Ana Pérez',
    comentario: 'Gracias a esta plataforma aprendí lo básico de programación en pocas semanas.',
  },
  {
    nombre: 'Luis Martínez',
    comentario: 'Ideal para autodidactas, el contenido es claro y directo.',
  },
  {
    nombre: 'Carmen Ruiz',
    comentario: 'El profesor Rafael explica todo de forma sencilla. Recomiendo mucho esta web.',
  },
]

const cursos = [
  'Python desde cero', 'HTML & CSS', 'Git básico', 'JavaScript intermedio'
]

const recursos = [
  'Guía de lógica', 'Cheat Sheet HTML/CSS', 'Ejercicios Python', 'Plantilla SQL'
]

const data = {
  labels: ['Cursos', 'Recursos', 'Testimonios'],
  datasets: [
    {
      data: [60, 25, 15],
      backgroundColor: ['#22d3ee', '#3b82f6', '#0ea5e9'],
      borderColor: '#1e293b',
      borderWidth: 2,
    },
  ],
}

export default function Home() {
  return (
    <main className="pt-32 pb-20 px-6 md:px-12 max-w-6xl mx-auto font-[Inter] text-white">
      {/* Hero */}
      <motion.section
        initial={{ opacity: 0, y: 40 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.7 }}
        className="text-center mb-16"
      >
        <h1 className="text-4xl md:text-5xl font-extrabold mb-4">
          Aprende a programar <span className="text-cyan-400">desde cero</span>
        </h1>
        <p className="text-gray-400 max-w-2xl mx-auto text-lg mb-8">
          Plataforma educativa moderna creada por el profesor Rafael. Gratuita, clara y confiable.
        </p>
        <a
          href="/cursos"
          className="inline-block bg-gradient-to-r from-cyan-400 to-blue-500 text-black px-6 py-3 rounded-full font-semibold hover:opacity-90 transition"
        >
          Explorar cursos
        </a>
        <img
          src="/images/persona.png"
          alt="Persona"
          className="mx-auto mt-10 max-w-xs rounded-xl"
        />
      </motion.section>

      {/* Tecnologías */}
      <section className="my-16">
        <h2 className="text-center text-xl font-semibold text-cyan-400 mb-4">Tecnologías que aprenderás</h2>
        <Swiper
          modules={[Autoplay]}
          autoplay={{ delay: 1800 }}
          loop={true}
          slidesPerView={3}
          spaceBetween={30}
          className="max-w-3xl mx-auto"
        >
          {tecnologias.map((tech, idx) => (
            <SwiperSlide key={idx}>
              <div className="bg-white/5 text-center py-4 rounded-lg shadow-inner border border-white/10">
                <p className="text-white text-lg font-semibold">{tech}</p>
              </div>
            </SwiperSlide>
          ))}
        </Swiper>
      </section>

      {/* Testimonios */}
      <section className="my-20">
        <h2 className="text-center text-xl font-semibold text-cyan-400 mb-6">Lo que opinan nuestros estudiantes</h2>
        <div className="grid md:grid-cols-3 gap-6">
          {testimonios.map((t, i) => (
            <div key={i} className="bg-white/5 p-6 rounded-xl border border-white/10 shadow">
              <p className="text-sm text-gray-300 mb-3">"{t.comentario}"</p>
              <p className="text-cyan-400 font-semibold text-sm">- {t.nombre}</p>
            </div>
          ))}
        </div>
      </section>

      {/* Impacto gráfico */}
      <section className="my-20">
        <h2 className="text-center text-xl font-semibold text-cyan-400 mb-6">Nuestro impacto</h2>
        <div className="w-60 mx-auto">
          <Doughnut data={data} />
        </div>
      </section>

      {/* Cursos y recursos */}
      <section className="my-20 grid md:grid-cols-2 gap-8">
        <div className="bg-white/5 p-6 rounded-xl border border-white/10">
          <h3 className="text-xl font-semibold mb-3">Nuestros cursos</h3>
          <ul className="text-gray-400 list-disc list-inside space-y-1">
            {cursos.map((c, i) => <li key={i}>{c}</li>)}
          </ul>
        </div>
        <div className="bg-white/5 p-6 rounded-xl border border-white/10">
          <h3 className="text-xl font-semibold mb-3">Recursos gratuitos</h3>
          <ul className="text-gray-400 list-disc list-inside space-y-1">
            {recursos.map((r, i) => <li key={i}>{r}</li>)}
          </ul>
        </div>
      </section>

      {/* CTA final */}
      <section className="bg-gradient-to-r from-cyan-500 to-blue-600 p-10 rounded-2xl text-black text-center mt-28">
        <h3 className="text-2xl font-bold mb-2">¿Listo para comenzar tu camino?</h3>
        <p className="mb-4">Explora nuestros cursos y recursos, o contáctanos si tienes dudas.</p>
        <a
          href="/contacto"
          className="inline-block bg-black text-white px-6 py-2 rounded-full font-semibold hover:opacity-90 transition"
        >
          Contáctanos
        </a>
      </section>
    </main>
  )
}







